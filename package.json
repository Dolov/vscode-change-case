{
  "name": "change-case-next",
  "displayName": "change-case-next",
  "description": "Convert the case format of the selected text, supporting options for all uppercase, all lowercase, lowercamel case, and uppercamel case.",
  "publisher": "Dolov",
  "repository": "https://github.com/Dolov/vscode-change-case",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "icon.png",
  "contributes": {
    "menus": {
      "changeCase": [
        {
          "command": "change-case-next.uppercase",
          "group": "1"
        },
        {
          "command": "change-case-next.lowercase",
          "group": "2"
        },
        {
          "command": "change-case-next.lowerCamelCase",
          "group": "3"
        },
        {
          "command": "change-case-next.upperCamelCase",
          "group": "4"
        }
      ],
      "editor/context": [
        {
          "when": "editorHasSelection",
          "submenu": "changeCase",
          "group": "navigation"
        }
      ]
    },
    "submenus": [
      {
        "id": "changeCase",
        "label": "大小写转化"
      }
    ],
    "commands": [
      {
        "command": "change-case-next.uppercase",
        "title": "全大写"
      },
      {
        "command": "change-case-next.lowercase",
        "title": "全小写"
      },
      {
        "command": "change-case-next.lowerCamelCase",
        "title": "小驼峰"
      },
      {
        "command": "change-case-next.upperCamelCase",
        "title": "大驼峰"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "start": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
